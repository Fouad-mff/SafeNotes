<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.safenotes"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="SafeNotes"
        android:theme="@style/AppTheme" >        
        <activity
            android:name="com.example.safenotes.StartLogo"             
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" android:screenOrientation="portrait">"
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.safenotes.FirstLogIn"             
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:screenOrientation="portrait">"        
        </activity>
        <activity
            android:name="com.example.safenotes.NoteList"
             android:theme="@android:style/Animation.Toast" android:multiprocess="true" android:icon="@drawable/note" android:label="Mes Notes">"            
        </activity>
        <activity
            android:name="com.example.safenotes.NoteEdit"
             android:theme="@android:style/Theme.Holo.Light" android:multiprocess="true" android:icon="@drawable/note" android:label="Mes Notes">"            
        </activity>
        <activity
            android:name="com.example.safenotes.Login"             
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:screenOrientation="portrait">"        
        </activity>
    </application>

</manifest>
